<Frame name="CnD" parent="UIParent" frameStrata="LOW" movable="true" hidden="false">
	<Size x="1000" y="650"/>
	<Anchors>
		<Anchor point="TOPLEFT" relativeTo="Minimap" relativePoint="BOTTOMLEFT"/><Offset x="-200" y="0"/>
	</Anchors>
	<Frames>
		<Frame name="Display" setAllPoints="true" hidden="false">
			<Layers>
				<Layer level="BACKGROUND"/>
			</Layers>
			<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
				<EdgeSize>
					<AbsValue val="16"/>
				</EdgeSize>
				<Color r="0.3" g="1" b="1"/>
				<BackgroundInsets>
					<AbsInset left="5" right="5" top="5" bottom="5"/>
				</BackgroundInsets>
			</Backdrop>
		</Frame>				
	</Frames>
	<Scripts>
		<OnLoad>
			Init()
		</OnLoad>
		<OnEvent>
			HandleEvent(event)
		</OnEvent>
		<OnMouseDown>
			this:StartMoving();
		</OnMouseDown>
		<OnMouseUp>
			this:StopMovingOrSizing()
		</OnMouseUp>
	</Scripts>
</Frame>

